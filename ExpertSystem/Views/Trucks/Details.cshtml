@model ExpertSystem.ViewModels.TruckDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Informacje o pojeździe</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Lokalizacja
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Location.Name)
        </dd>

        <dt>
            Pojazd
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Name)
        </dd>

        <dt>
            Pojemność
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Capacity)
        </dd>

        <dt>
            Jednostka pojemności
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.CapacityUnit)
        </dd>

        <dt>
            Prędkość
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Speed)
        </dd>

        <dt>
           Typ pojazdu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Type)
        </dd>

        <dt>
            Status pojazdu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Truck.Status)
        </dd>

        <h2>Posiadane uprawnienia</h2>

        <table class="table">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                   Opis
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Truck.Rules)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rule.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rule.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Usuń", "DeleteRule", new { id = item.TruckRuleID })
                    </td>
                </tr>
            }

        </table>

        <h2>Uprawnienia do dodania</h2>

        <table class="table">
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Opis
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Rules)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Dodaj", "AddRule", new { rulesId = item.RequireRuleID, truckId = Model.Truck.TruckID })
                    </td>
                </tr>
            }

        </table>

    </dl>
</div>
<p>
    @Html.ActionLink("Wróc na listę", "Index")
</p>
